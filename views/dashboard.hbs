<h6>Dashboard</h6>
<h3>Welcome {{ name }}</h3>

<h2>Participation History</h2>
{{#if records}}
    <table class="striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Event</th>
                <th>Status</th>
                <th>Capacity</th>
                <th>Created at</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each records}}
                <tr>
                    <td><a href="/records/{{ _id }}">{{ type }}</a></td>
                    <td>{{ date }}</td>
                    <td>{{ status }}</td>
                    <td>{{ capacity }}</td>
                    <td>{{ createdAt }}</td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not participated in any events</p>
{{/if}}
